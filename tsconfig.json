{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "rootDirs": [
      "./src"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true
  }
}
